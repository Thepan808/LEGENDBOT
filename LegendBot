#!/bin/bash


_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $LEGEND_REPO == "LEGENDBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZXBhbjgwOC9USEVQQU5EQVVTRVIvYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    elif [[ $LEGEND_REPO == "LEGENDBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZXBhbjgwOC9USEVQQU5EQVVTRVIvYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    elif [[ $LEGEND_REPO =~ $regex ]]
    then
        if [[ $LEGEND_REPO_BRANCH ]]
        then
            echo "${LEGEND_REPO}/archive/${LEGEND_REPO_BRANCH}.zip"
        else
            echo "${LEGEND_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZXBhbjgwOC9USEVQQU5EQVVTRVIvYXJjaGl2ZS9tYXN0ZXIuemlw" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="THEPANDAUSER.zip"
    echo "  âšœCarregando baianor...ðŸ˜´"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    LEGENDPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  LegendBot V3.0 Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $LEGENDPATH
    echo "    â€¢ Starting LÃªÉ ÃªÉ³ÌƒdáºžÃ¸t 3.0â€¢    "
    echo "
    LEGENDBOT
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_set_bot
